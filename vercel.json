{
  "version": 2,
  "name": "qr-code-generator",
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.6.0"
    }
  },
  "builds": [
    { "src": "index.html", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "/(.*).html", "dest": "/$1.html" },
    { "src": "/(.*).(js|css)", "dest": "/$1.$2" },
    { "src": "/api/(.*)", "dest": "/api/$1.php" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
